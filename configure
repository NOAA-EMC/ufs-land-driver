#!/usr/bin/perl

  if($#ARGV == 0) {
     $response = shift(@ARGV) ;
     print("Configure environment: $response \n");
  }else {
     print "Please select from following predefined environments: \n\n";

     print "   1. NOAA Ursa parallel \n";
     print "   2. MSU/NOAA Orion parallel \n";
     print "   3. gfortran compiler parallel \n";
     print "   0. exit only \n";

     printf "\nEnter selection : " ;

     $response = <STDIN> ;
     chop($response);
  }

  if ($response == 1) {
              # NOAA Ursa parallel
              system "cp environments/user_build_config.ursa.parallel user_build_config"; 
              print "=====================================================================\n"; 
              print "================== ursa configure environment set ===================\n"; 
              print "=====================================================================\n"; 
              print " \n"; 
              print "NEED TO LOAD MODULES: \n"; 
              print " \n"; 
              print "module use /contrib/spack-stack/spack-stack-1.9.2/envs/ue-oneapi-2024.2.1/install/modulefiles/Core \n"; 
              print "module load stack-oneapi/2024.2.1 stack-intel-oneapi-mpi/2021.13 netcdf-fortran/4.6.1 \n"; 
              print " \n"; 
              print "If modules are outdated, create issue at https://github.com/NOAA-EMC/ufs-land-driver \n"; 
              print " \n"; 
              print "=====================================================================\n"; 
              print "=====================================================================\n"; 
            }

  elsif ($response == 2) {
              # MSU/NOAA Orion parallel
              system "cp environments/user_build_config.orion.parallel user_build_config"; 
              print "=====================================================================\n"; 
              print "================= orion configure environment set ===================\n"; 
              print "=====================================================================\n"; 
              print " \n"; 
              print "NEED TO LOAD MODULES: \n"; 
              print " \n"; 
              print "module use /work/noaa/epic/role-epic/spack-stack/orion/spack-stack-1.6.0/envs/unified-env-rocky9/install/modulefiles/Core \n"; 
              print "module load stack-intel/2021.9.0 stack-intel-oneapi-mpi/2021.9.0 netcdf-fortran/4.6.1 \n"; 
              print " \n"; 
              print "If modules are outdated, create issue at https://github.com/NOAA-EMC/ufs-land-driver \n"; 
              print " \n"; 
              print "=====================================================================\n"; 
              print "=====================================================================\n"; 
            }

  elsif ($response == 3) {
              # generic gfortran settings
              system "cp environments/user_build_config.gfortran.parallel user_build_config"; 
              print "=====================================================================\n"; 
              print "=====================================================================\n"; 
              print " \n"; 
              print "Generic gfortran user_build_config created. \n\nYou will likely have to modify for your system.\n"; 
              print " \n"; 
              print "=====================================================================\n"; 
              print "=====================================================================\n"; 
            }

  else   {print "no selection $response\n"; last} 
